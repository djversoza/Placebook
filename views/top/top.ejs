              <h3 class="info"><%= data[i].content %> | <%= data[i].location%> | <%=data[i].dates %></h3>

              <div class="opts" style="float:right; margin-top: 5px;">

              <a href="/top/<%= data[i].id %>/views" class="new"id="edit"><button class="newnew" type="button" name="button" >View</button></a>


              <a href = "/top/<%= data[i].id %>/edit"><button class="newnew" type="button" name="button" id="edit">Edit</button></a>

              <a href = "/top/<%= data[i].id %>/delete"><button class="newnew" type="button" name="button" id="delete">Delete</button></a>
            </div>

          </div>
        <% } %>
        </div>

      </div>

    </div>













<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</div>
